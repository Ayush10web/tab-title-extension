{
  "manifest_version": 3,
  "name": "LinkedIn Auto Like & Comment (dev)",
  "version": "1.0.0",
  "description": "Automates liking and commenting on visible LinkedIn feed posts (for testing). Shows results and stores history.",
  "action": {
    "default_title": "Auto Like/Comment",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
